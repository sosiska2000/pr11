<Window x:Class="APIGigaChatImageWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APIGigaChatImageWPF"
        mc:Ignorable="d"
        Title="Генератор обоев GigaChat" 
        Height="750" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F7">

    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="StatusBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0F7FF"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1E6FF"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="RadioButtonCardStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="White" 
                                CornerRadius="8" 
                                BorderThickness="2" 
                                BorderBrush="#E0E0E0"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="{TemplateBinding Content}" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="border" Property="Background" Value="#F0F7FF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Заголовок -->
                <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                    <TextBlock Text="🎨" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Генератор обоев GigaChat" Style="{StaticResource TitleStyle}"/>
                    <TextBlock Text="Создавайте уникальные обои с помощью ИИ и устанавливайте их на рабочий стол" 
                               Style="{StaticResource SubtitleStyle}"/>
                </StackPanel>

                <!-- Режимы работы -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Режим работы" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- ВАЖНО: Добавлены x:Name для RadioButton -->
                            <RadioButton x:Name="ManualModeRadio" 
                                       Content="Ручной режим" 
                                       GroupName="Mode" 
                                       IsChecked="True"
                                       Style="{StaticResource RadioButtonCardStyle}"
                                       Margin="0,0,10,0"
                                       Checked="ModeRadioButton_Checked"/>

                            <RadioButton x:Name="CalendarModeRadio" 
                                       Content="Календарный режим" 
                                       GroupName="Mode" 
                                       Style="{StaticResource RadioButtonCardStyle}"
                                       Checked="ModeRadioButton_Checked"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Параметры генерации (Ручной режим) -->
                <Border x:Name="ManualModePanel" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Параметры генерации" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <Label Content="Описание обоев:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="PromptTextBox" 
                                Height="80" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                FontSize="14"
                                Padding="10"
                                Text="Красивые обои на рабочий стол, горный пейзаж, закат"/>

                        <Label Content="Стиль:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="StyleComboBox" 
                                 Style="{StaticResource ComboBoxStyle}"
                                 SelectedIndex="0">
                            <ComboBoxItem>реализм</ComboBoxItem>
                            <ComboBoxItem>цифровое искусство</ComboBoxItem>
                            <ComboBoxItem>живопись</ComboBoxItem>
                            <ComboBoxItem>минимализм</ComboBoxItem>
                            <ComboBoxItem>фэнтези</ComboBoxItem>
                            <ComboBoxItem>абстракция</ComboBoxItem>
                        </ComboBox>

                        <Label Content="Цветовая палитра:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="ColorComboBox" 
                                 Style="{StaticResource ComboBoxStyle}"
                                 SelectedIndex="0">
                            <ComboBoxItem>яркая</ComboBoxItem>
                            <ComboBoxItem>пастельная</ComboBoxItem>
                            <ComboBoxItem>монохромная</ComboBoxItem>
                            <ComboBoxItem>контрастная</ComboBoxItem>
                            <ComboBoxItem>тёплые тона</ComboBoxItem>
                            <ComboBoxItem>холодные тона</ComboBoxItem>
                            <ComboBoxItem>неоновая</ComboBoxItem>
                        </ComboBox>

                        <Label Content="Соотношение сторон:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="AspectRatioComboBox" 
                                 Style="{StaticResource ComboBoxStyle}"
                                 SelectedIndex="0">
                            <ComboBoxItem>16:9</ComboBoxItem>
                            <ComboBoxItem>16:10</ComboBoxItem>
                            <ComboBoxItem>4:3</ComboBoxItem>
                            <ComboBoxItem>21:9</ComboBoxItem>
                            <ComboBoxItem>1:1</ComboBoxItem>
                            <ComboBoxItem>3:2</ComboBoxItem>
                        </ComboBox>

                        <!-- ВАЖНО: Добавлен x:Name для кнопки генерации -->
                        <Button x:Name="GenerateButton" 
                               Content="🎨 Сгенерировать обои" 
                               Style="{StaticResource PrimaryButtonStyle}"
                               Click="GenerateButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Календарный режим -->
                <Border x:Name="CalendarModePanel" 
                        Style="{StaticResource CardStyle}" 
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Календарный режим" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"
                                   Foreground="#0078D4"/>

                        <Label Content="Выберите праздник:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="HolidayComboBox" 
                                 Style="{StaticResource ComboBoxStyle}"
                                 DisplayMemberPath="Name"
                                 SelectionChanged="HolidayComboBox_SelectionChanged"/>

                        <StackPanel x:Name="HolidayInfoPanel" Margin="0,15,0,0" Visibility="Collapsed">
                            <TextBlock x:Name="HolidayNameText" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="#0078D4"/>

                            <TextBlock x:Name="HolidayDescriptionText" 
                                     TextWrapping="Wrap"
                                     Margin="0,5,0,0"
                                     Foreground="#666666"/>

                            <TextBlock x:Name="HolidayDateText" 
                                     FontStyle="Italic"
                                     Margin="0,10,0,0"
                                     Foreground="#888888"/>
                        </StackPanel>

                        <Border x:Name="GeneratedPromptPanel" 
                                Style="{StaticResource StatusBoxStyle}" 
                                Margin="0,15,0,0"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="📝 Сгенерированный промпт:" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="GeneratedPromptText" 
                                         TextWrapping="Wrap"
                                         FontStyle="Italic"/>
                            </StackPanel>
                        </Border>

                        <Button Content="🎨 Сгенерировать тематические обои" 
                               Style="{StaticResource PrimaryButtonStyle}"
                               Click="GenerateButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Результат -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Результат" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <!-- Предпросмотр изображения -->
                        <Border BorderBrush="#E0E0E0" 
                               BorderThickness="1" 
                               Height="250" 
                               CornerRadius="8" 
                               Margin="0,0,0,15"
                               Background="#F8F8F8">
                            <Grid>
                                <Image x:Name="PreviewImage" 
                                      Stretch="Uniform"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>

                                <!-- Плейсхолдер когда нет изображения -->
                                <TextBlock x:Name="PreviewPlaceholder" 
                                         Text="Здесь будет отображаться сгенерированное изображение" 
                                         Foreground="#999999"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         TextAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Кнопки действий -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="DownloadButton" 
                                   Content="💾 Скачать" 
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   IsEnabled="False"
                                   Click="DownloadButton_Click"/>

                            <Button x:Name="SetWallpaperButton" 
                                   Content="🖼️ Установить обои" 
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   IsEnabled="False"
                                   Click="SetWallpaperButton_Click"/>
                        </StackPanel>

                        <!-- Статус -->
                        <Border Style="{StaticResource StatusBoxStyle}" Margin="0,15,0,0">
                            <TextBlock x:Name="StatusTextBlock" 
                                     Text="Готов к работе. Выберите параметры и нажмите 'Сгенерировать обои'."
                                     TextWrapping="Wrap"
                                     FontSize="14"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Информация -->
                <Border Style="{StaticResource CardStyle}" Background="#F0F7FF">
                    <StackPanel>
                        <TextBlock Text="ℹ️ Информация" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"
                                   Foreground="#0078D4"/>

                        <TextBlock TextWrapping="Wrap" FontSize="13" Foreground="#666666">
                            <Run Text="• Для оценки 'Хорошо': WPF приложение с выбором параметров генерации"/>
                            <LineBreak/>
                            <Run Text="• Для оценки 'Отлично': Реализован календарный режим с тематическими обоями к праздникам"/>
                            <LineBreak/>
                            <Run Text="• Используется GigaChat API для генерации изображений"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>